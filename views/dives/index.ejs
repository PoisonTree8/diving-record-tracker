<!DOCTYPE html>
<html>
<head><meta charset="UTF-8"><title>My Dives</title></head>
<body>
  <h1>My Dive Logs</h1>
  <p><a href="/dives/new">+ Add new dive</a></p>

  <% const dives = locals.dives || []; %>
  <% if (dives.length === 0) { %>
    <p>No dives yet.</p>
  <% } else { %>
    <ul>
      <% dives.forEach(d => { %>
        <li>
          <a href="/dives/<%= d._id %>">
            <strong><%= d.location %></strong> — 
            <%= new Date(d.date).toDateString() %> — 
            <%= d.type %> — 
            <%= d.depth %> m / <%= d.bottomTime %> min
          </a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>

